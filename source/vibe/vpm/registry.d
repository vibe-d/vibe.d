on("Could not get metadata for " ~ packageId);		}				string jsonData = cast(string)res.bodyReader.readAll();		Json json = parseJson(jsonData);		m_allMetadata[packageId] = json;		return json;	}		private Json bestPackage(const string packageId, const Dependency dep) {		Json md = metadata(packageId);		Json best = null;		foreach(json; md["versions"]) {			auto cur = Version(cast(string)json["version"]);			if(dep.matches(cur) && (best == null || Version(cast(string)best["version"]) < cur))				best = json;		}		enforce(best != null);		return best;	}}